---
import { companyInfo } from "../../data/services";
import Map from "./Map.astro";
import ContactForm from "../react/ContactForm";
---

<section id="kontakt" class="section bg-neutral-100">
    <div class="container">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
                Kontakt
            </h2>
            <p class="text-lg text-neutral-700">
                Ich freue mich auf Ihre Anfrage – nehmen Sie Kontakt mit mir auf
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
            <!-- Contact Form -->
            <div class="bg-white rounded-xl p-6 md:p-8 shadow-md">
                <h3 class="text-xl font-semibold text-neutral-900 mb-6">
                    Schreiben Sie uns
                </h3>
                <ContactForm client:visible />
            </div>

            <!-- Contact Info & Map -->
            <div class="space-y-8">
                <!-- Contact Details -->
                <div class="bg-white rounded-xl p-6 md:p-8 shadow-md">
                    <h3 class="text-xl font-semibold text-neutral-900 mb-6">
                        Kontaktdaten
                    </h3>

                    <address class="not-italic space-y-4">
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    class="w-5 h-5 text-primary"
                                >
                                    <path
                                        d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                    ></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium text-neutral-900">
                                    {companyInfo.name}
                                </p>
                                <p class="text-neutral-700">
                                    {companyInfo.owner}
                                </p>
                                <p class="text-neutral-700">
                                    {companyInfo.street}
                                </p>
                                <p class="text-neutral-700">
                                    {companyInfo.zip}
                                    {companyInfo.city} – {companyInfo.district}
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <div
                                class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    class="w-5 h-5 text-primary"
                                >
                                    <path
                                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                    ></path>
                                </svg>
                            </div>
                            <a
                                href={`tel:${companyInfo.phone.replace(/\s/g, "")}`}
                                class="text-neutral-700 hover:text-primary transition-colors"
                            >
                                {companyInfo.phone}
                            </a>
                        </div>

                        <div class="flex items-center gap-4">
                            <div
                                class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    class="w-5 h-5 text-primary"
                                >
                                    <rect
                                        width="20"
                                        height="16"
                                        x="2"
                                        y="4"
                                        rx="2"></rect>
                                    <path
                                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                    ></path>
                                </svg>
                            </div>
                            <a
                                href={`mailto:${companyInfo.email}`}
                                class="text-neutral-700 hover:text-primary transition-colors"
                            >
                                {companyInfo.email}
                            </a>
                        </div>
                    </address>
                </div>

                <!-- Map -->
                <div>
                    <Map />
                </div>
            </div>
        </div>
    </div>
</section>
