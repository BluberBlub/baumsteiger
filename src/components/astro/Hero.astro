---
interface Props {
    title: string;
    subtitle?: string;
    ctaText?: string;
    ctaHref?: string;
    backgroundImage?: string;
}

const {
    title,
    subtitle,
    ctaText = "Kontakt aufnehmen",
    ctaHref = "#kontakt",
    backgroundImage = "/images/hero/hero-bg.jpg",
} = Astro.props;
---

<section
    class="relative min-h-[90vh] flex items-center justify-center overflow-hidden"
    id="hero"
>
    <!-- Background with Parallax -->
    <div class="absolute inset-0 z-0 select-none">
        <div
            id="hero-bg"
            class="absolute inset-0 bg-cover bg-center bg-no-repeat scale-110 transition-transform duration-75 ease-out"
            style={`background-image: url('${backgroundImage}');`}
        >
        </div>
        <!-- Forest Gradient Overlay - More depth/green than just black -->
        <div
            class="absolute inset-0 bg-gradient-to-b from-[var(--color-primary-dark)]/80 via-[var(--color-primary-dark)]/40 to-[var(--color-primary-dark)]/90 mix-blend-multiply"
        >
        </div>

        <!-- Animated Particles / Fireflies effect -->
        <div class="absolute inset-0 opacity-30 pointer-events-none">
            <div
                class="absolute top-1/4 left-1/4 w-2 h-2 bg-emerald-400 rounded-full animate-float-slow"
            >
            </div>
            <div
                class="absolute top-3/4 left-2/3 w-3 h-3 bg-emerald-400 rounded-full animate-float-medium"
            >
            </div>
            <div
                class="absolute top-1/3 right-1/4 w-1.5 h-1.5 bg-white rounded-full animate-pulse"
            >
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="container relative z-10 text-center text-white py-20 px-4">
        <div class="max-w-5xl mx-auto space-y-10 animate-fade-in">
            <!-- Organic Badge -->
            <div
                class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-md border border-white/20 rounded-full px-6 py-2 shadow-lg"
            >
                <span
                    class="text-sm font-semibold tracking-wide uppercase text-white/90"
                    >Baumpflege Experten</span
                >
            </div>

            <!-- Main Title -->
            <h1
                class="font-serif text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight leading-none drop-shadow-2xl"
            >
                <span class="block text-white mb-2">Natürlich.</span>
                <span class="block text-emerald-400 relative inline-block">
                    Sicher.
                    <svg
                        class="absolute -bottom-2 left-0 w-full h-3 text-emerald-400/30 -z-10"
                        viewBox="0 0 100 10"
                        preserveAspectRatio="none"
                    >
                        <path
                            d="M0 5 Q 50 10 100 5"
                            stroke="currentColor"
                            stroke-width="8"
                            fill="none"></path>
                    </svg>
                </span>
                <span
                    class="block text-white/90 mt-2 text-4xl md:text-6xl lg:text-7xl"
                    >Baumpflege.</span
                >
            </h1>

            <!-- Subtitle Box -->
            <p
                class="text-xl md:text-2xl text-white font-bold leading-relaxed max-w-2xl mx-auto text-shadow-xl font-sans"
                style="color: #ffffff !important;"
            >
                Professionelle Baumpflege mit Leidenschaft – sicher, schonend
                und zuverlässig im gesamten Allgäu.
            </p>

            <!-- Buttons -->
            <div
                class="flex flex-col sm:flex-row gap-5 justify-center items-center pt-8"
            >
                <a
                    href={ctaHref}
                    class="group relative inline-flex items-center gap-3 bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded-full font-bold text-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-primary/40 shadow-lg shadow-primary/20"
                >
                    <span>{ctaText}</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                    >
                        <path d="M5 12h14"></path>
                        <path d="m12 5 7 7-7 7"></path>
                    </svg>
                </a>
                <a
                    href="#intro"
                    class="inline-flex items-center gap-2 bg-white/5 backdrop-blur-sm hover:bg-white/10 text-white border border-white/20 px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 hover:-translate-y-1 hover:border-white/40"
                >
                    Mehr erfahren
                </a>
            </div>

            <!-- Trust Indicators vertical divider style -->
            <div
                class="pt-16 flex flex-wrap justify-center gap-y-4 gap-x-8 md:gap-x-12 text-white/80 text-sm font-semibold uppercase tracking-wider"
            >
                <span class="flex items-center gap-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-emerald-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        ><polyline points="20 6 9 17 4 12"></polyline></svg
                    >
                    Zertifiziert
                </span>
                <span class="hidden md:block w-px h-4 bg-white/20"></span>
                <span class="flex items-center gap-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-emerald-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                        ></path></svg
                    >
                    Versichert
                </span>
                <span class="hidden md:block w-px h-4 bg-white/20"></span>
                <span class="flex items-center gap-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-emerald-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        ><circle cx="12" cy="12" r="10"></circle><polyline
                            points="12 6 12 12 16 14"></polyline></svg
                    >
                    Schnell Vor Ort
                </span>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes float-slow {
        0%,
        100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(10px, -20px);
        }
    }
    @keyframes float-medium {
        0%,
        100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(-15px, -10px);
        }
    }
    .animate-float-slow {
        animation: float-slow 8s ease-in-out infinite;
    }
    .animate-float-medium {
        animation: float-medium 6s ease-in-out infinite;
    }
</style>

<script>
    // Simple Parallax Effect
    document.addEventListener("scroll", () => {
        const heroBg = document.getElementById("hero-bg");
        if (heroBg) {
            const scroll = window.scrollY;
            if (scroll < window.innerHeight) {
                heroBg.style.transform = `scale(1.1) translateY(${scroll * 0.4}px)`;
            }
        }
    });
</script>
