<!-- Sticky Contact Buttons - Fixed to bottom-right -->
<div
    class="fixed bottom-6 right-6 z-[55] flex flex-col gap-3"
    id="sticky-contact"
>
    <!-- Phone Button -->
    <a
        href="tel:015128885660"
        class="group flex items-center gap-3 bg-primary text-white rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 hover:bg-primary-dark"
        aria-label="Anrufen"
    >
        <!-- Label - visible on desktop hover -->
        <span
            class="hidden md:block max-w-0 overflow-hidden whitespace-nowrap opacity-0 group-hover:max-w-[200px] group-hover:opacity-100 group-hover:pl-5 transition-all duration-300 text-sm font-semibold"
        >
            Jetzt anrufen
        </span>
        <span class="w-14 h-14 flex items-center justify-center flex-shrink-0">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6"
            >
                <path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
            </svg>
        </span>
    </a>

    <!-- Email Button -->
    <a
        href="mailto:buero@baumsteiger-allgaeu.de"
        class="group flex items-center gap-3 bg-white text-primary border-2 border-primary/20 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 hover:border-primary"
        aria-label="E-Mail senden"
    >
        <!-- Label - visible on desktop hover -->
        <span
            class="hidden md:block max-w-0 overflow-hidden whitespace-nowrap opacity-0 group-hover:max-w-[200px] group-hover:opacity-100 group-hover:pl-5 transition-all duration-300 text-sm font-semibold"
        >
            E-Mail schreiben
        </span>
        <span class="w-14 h-14 flex items-center justify-center flex-shrink-0">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6"
            >
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
        </span>
    </a>
</div>

<style>
    /* Hide sticky contact when near the footer contact section */
    @media (prefers-reduced-motion: reduce) {
        #sticky-contact a {
            transition: none;
        }
    }
</style>

<script>
    // Hide sticky buttons when the contact section or footer is visible
    const stickyContact = document.getElementById("sticky-contact");
    const contactSection = document.getElementById("kontakt");

    if (stickyContact && contactSection) {
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        stickyContact.style.opacity = "0";
                        stickyContact.style.pointerEvents = "none";
                    } else {
                        stickyContact.style.opacity = "1";
                        stickyContact.style.pointerEvents = "auto";
                    }
                });
            },
            { threshold: 0.1 },
        );
        observer.observe(contactSection);
    }
</script>
