---
import { companyInfo } from "../../data/services";
---

<div
    class="w-full h-[300px] md:h-[400px] rounded-xl overflow-hidden bg-neutral-200"
>
    <iframe
        title="Standort Baumsteiger Allgäu"
        src={`https://www.openstreetmap.org/export/embed.html?bbox=${companyInfo.coordinates.lng - 0.02}%2C${companyInfo.coordinates.lat - 0.01}%2C${companyInfo.coordinates.lng + 0.02}%2C${companyInfo.coordinates.lat + 0.01}&layer=mapnik&marker=${companyInfo.coordinates.lat}%2C${companyInfo.coordinates.lng}`}
        width="100%"
        height="100%"
        style="border: 0;"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>

<a
    href={`https://www.openstreetmap.org/?mlat=${companyInfo.coordinates.lat}&mlon=${companyInfo.coordinates.lng}#map=14/${companyInfo.coordinates.lat}/${companyInfo.coordinates.lng}`}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-2 mt-4 text-primary hover:text-primary-dark font-medium transition-colors"
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        class="w-5 h-5"
    >
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
        ></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
    </svg>
    Größere Karte anzeigen
</a>
