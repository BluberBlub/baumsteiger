---
import { services } from "../../data/services";
import ServiceCard from "./ServiceCard.astro";
---

<section id="leistungen" class="section bg-neutral-50 relative overflow-hidden">
    <!-- Pattern Background -->
    <div
        class="absolute inset-0 opacity-[0.03]"
        style="background-image: url('data:image/svg+xml,%3Csvg width=\'20\' height=\'20\' viewBox=\'0 0 20 20\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'%23000000\' fill-opacity=\'1\' fill-rule=\'evenodd\'%3E%3Ccircle cx=\'3\' cy=\'3\' r=\'3\'/%3E%3Ccircle cx=\'13\' cy=\'13\' r=\'3\'/%3E%3C/g%3E%3C/svg%3E');"
    >
    </div>

    <div class="container relative z-10">
        <!-- Section Header -->
        <div
            class="text-center max-w-3xl mx-auto mb-16 md:mb-24 animate-fade-in-up"
        >
            <span
                class="text-accent font-semibold tracking-wider uppercase text-sm mb-2 block"
            >
                Mein Leistungsangebot
            </span>
            <h2 class="text-3xl md:text-5xl font-bold text-neutral-900 mb-6">
                Baumarbeiten im Allgäu & Bodenseeregion
            </h2>
            <p class="text-xl text-neutral-700 leading-relaxed font-medium">
                Fachgerecht und nachhaltig – ich biete Ihnen das komplette
                Spektrum professioneller Baumpflege aus einer Hand.
            </p>
        </div>

        <!-- Services Grid - 2x3 layout for 6 services -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
        >
            {
                services
                    .slice(0, 6)
                    .map((service, index) => (
                        <ServiceCard service={service} index={index} />
                    ))
            }
        </div>

        <!-- Last service featured or CTA row -->
        <div
            class="mt-8 md:mt-12 grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-4xl mx-auto"
        >
            <ServiceCard service={services[6]} index={6} />

            <!-- CTA Card - Minimalist -->
            <div
                class="h-full flex flex-col items-center justify-center bg-primary rounded-xl p-8 text-center text-white"
            >
                <h3
                    class="text-xl font-bold mb-2"
                    style="color: #ffffff !important;"
                >
                    Noch Fragen?
                </h3>
                <p
                    class="text-white/80 text-sm mb-4"
                    style="color: rgba(255,255,255,0.8) !important;"
                >
                    Ich berate Sie gerne persönlich.
                </p>
                <a
                    href="#kontakt"
                    class="inline-flex items-center gap-1 text-white font-medium text-sm border-b border-white/50 hover:border-white transition-colors"
                    style="color: #ffffff !important;"
                >
                    Kontakt aufnehmen
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-4 h-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="m9 18 6-6-6-6"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
